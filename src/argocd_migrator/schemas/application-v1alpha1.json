{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ArgoCD Application",
  "description": "JSON Schema for ArgoCD Application (argoproj.io/v1alpha1)",
  "type": "object",
  "required": ["apiVersion", "kind", "metadata", "spec"],
  "properties": {
    "apiVersion": {
      "type": "string",
      "pattern": "^argoproj\\.io/v1alpha1$",
      "description": "API version (must be argoproj.io/v1alpha1)"
    },
    "kind": {
      "type": "string",
      "const": "Application",
      "description": "Resource kind (must be Application)"
    },
    "metadata": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Application name"
        },
        "namespace": {
          "type": "string",
          "description": "Namespace where Application is deployed"
        },
        "labels": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "annotations": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        }
      },
      "additionalProperties": true
    },
    "spec": {
      "type": "object",
      "required": ["destination", "project", "source"],
      "properties": {
        "project": {
          "type": "string",
          "description": "ArgoCD project name"
        },
        "source": {
          "type": "object",
          "required": ["repoURL"],
          "properties": {
            "repoURL": {
              "type": "string",
              "description": "Git repository URL"
            },
            "path": {
              "type": "string",
              "description": "Path within repository"
            },
            "targetRevision": {
              "type": "string",
              "description": "Git revision (branch, tag, or commit)"
            },
            "helm": {
              "type": "object",
              "description": "Helm-specific options"
            },
            "kustomize": {
              "type": "object",
              "description": "Kustomize-specific options"
            }
          },
          "additionalProperties": true
        },
        "destination": {
          "type": "object",
          "required": ["server"],
          "properties": {
            "server": {
              "type": "string",
              "description": "Kubernetes cluster API server URL"
            },
            "namespace": {
              "type": "string",
              "description": "Target namespace for deployment"
            }
          },
          "additionalProperties": true
        },
        "syncPolicy": {
          "type": "object",
          "description": "Sync policy configuration",
          "properties": {
            "automated": {
              "type": "object",
              "description": "Automated sync configuration"
            },
            "syncOptions": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "additionalProperties": true
        }
      },
      "additionalProperties": true
    },
    "status": {
      "type": "object",
      "description": "Application status (optional)"
    }
  },
  "additionalProperties": false
}
